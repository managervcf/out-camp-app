<% include ../partials/header %>
<div class="container-fluid">
    <header class="jumbotron text-center p-2">
        <h1>Editing <strong><%= campground.name %></strong> Campground</h1>
    </header>
    <main class="row text-center" id="newCampForm">
        <form class="formPage" action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control mb-2" type="text" name="campground[name]" value="<%= campground.name %>">
                <input class="form-control mb-2" type="number" name="campground[price]" value="<%= campground.price %>" min="0" step="0.5">
                <textarea class="form-control mb-2" name="campground[description]"><%= campground.description %></textarea>
                <input class="form-control mb-2" type="text" name="campground[location]" value="<%= campground.location %>">
                <input class="form-control mb-3" type="link" name="campground[image]" value="<%= campground.image %>">
                <button type="submit" class="btn btn-warning mb-2 btn-block">Update</button>
                <a class="btn btn-sm btn-link mb-2" href="/campgrounds/<%= campground._id %>">Go Back</a>
            </div>
        </form>
    </main>
</div>
<% include ../partials/footer %>